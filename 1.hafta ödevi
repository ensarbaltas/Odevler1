#4.odev
#faiz hesaplama

ap=int(input("Ana parayi giriniz : "))
fs=int(input("Faiz suresi(kac ay?) : "))
fo=int(input("Faiz oranini giriniz : "))
faiz=ap*fs*fo/100
af=faiz/fs
gf=faiz/(fs*30)

print("%%"*30,"\n"*2,"Faiz tutariniz : ",faiz,"tl dir. ","\n"*2,
      "Aylik faiz tutariniz : ",af,"tl dir.","\n"*2,
      "Gunluk faiz tutariniz : ",gf,"tl dir.","\n"*2,"%%"*30)

#5.odev
kira=int(input("kira giderinizi giriniz : "))
elektrik=int(input("Elektrik giderinizi giriniz : "))
su=int(input("Su giderinizi giriniz : "))
telefon=int(input("Telefon giderinizi giriniz : "))
internet=int(input("Internet giderinizi giriniz : "))
mutfak=int(input("mutfak giderinizi giriniz : "))
egitim=int(input("Egitim giderinizi giriniz : "))
ulasim=int(input("Ulasim giderinizi giriniz : "))
extra=int(input("Varsa extra giderlerinizi giriniz : "))
aylik=kira+elektrik+su+telefon+internet+mutfak+egitim+ulasim+extra
maas=int(input("Aylik brut maasinizi giriniz")) 
baslik="Aylik Giderlerininin aylik gelire orani    "
print("^"*len(baslik),"\n","Aylik Geliriniz : ",maas,"\n","aylik Gideriniz : ",aylik,"\n",

      "Giderlerinizini aylik gelirinize orani : ",float(aylik/maas),"\n","'Iktisat Berekettir..'","\n","^"*len(baslik))

#6.odev
print("Guido Van Rossum "*4)
print("-------"*9)
print("""Python’un kurucusu Guido Van Rossum, Hollanda’nin Amsterdam’daki
"Universiteit Van Amsterdam" okulundan  1982’de mezun olmuştur.""")
print("-------"*9)
print("Guido Van Rossum "*4,"\n"*2)

print("&"*67,"\n")

print(*"""Python’un kurucusu Guido Van Rossum, \nHollanda’nin Amsterdam’daki\n"Universiteit Van Amsterdam" \nokulundan  1982’de mezun olmuştur.""","\t","\n")

print("&"*67,"\n"*2)

print("^"*67,"\n")
print(*"""Python’un kurucusu Guido Van Rossum,
Hollanda’nin Amsterdam’daki
"Universiteit Van Amsterdam"
okulundan  1982’de mezun olmuştur.""",sep=(">"),end="\n"*2)

print("^"*67,"\n")


EXTRA ODEV

#Kediler ilk dogduklarindaki kilolari;

BK1=106
SO1=93
SB1=112
SK1=83
BB1=109

#Kedilerin kilolari;
print("Kedilerin son haftaki kilolari ;","\n")

BK=int(input("Beyaz küçük : "))
SO=int(input("Siyah orta  : ")) 
SB=int(input("Siyah buyuk : "))
SK=int(input("Siyah Küçük : "))
BB=int(input("Beyaz büyük : "))


print("\n"*2,"KEDILERIN AGIRLIKLARINDAKI HAFTALIK ARTIS MIKTARLARI","\n"*2,
      "Beyaz küçük : ",BK-BK1,"\n","Siyah orta  : ",SO-SO1,"\n",
      "Siyah buyuk : ",SB-SB1,"\n","Siyah Küçük : ",SK-SK1,"\n",
      "Beyaz büyük : ",BB-BB1)


